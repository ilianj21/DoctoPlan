{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<h1>Se connecter</h1>

{% if error %}
   <div class="alert alert-danger">
       {{ error.messageKey|trans(error.messageData, 'security') }}
   </div>
{% endif %}

<form method="post" action="{{ path('login') }}">
    <div class="form-group">
        <label for="username">Utilisateur (email) :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus class="form-control"/>
    </div>
    <div class="form-group">
        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password" required class="form-control"/>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <div class="form-group form-check">
        <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
        <label for="remember_me" class="form-check-label">Se souvenir de moi</label>
    </div>
    <button type="submit" class="btn btn-primary">Connexion</button>
</form>
{% endblock %}
