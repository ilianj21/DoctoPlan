{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<h1>Se connecter</h1>

{% if error %}
   <div class="alert alert-danger">
       {{ error.messageKey|trans(error.messageData, 'security') }}
   </div>
{% endif %}

<form method="post" action="{{ path('login') }}">
    <div class="form-group">
        <label for="username">Utilisateur (email) :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus class="form-control"/>
    </div>
    <div class="form-group">
        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password" required class="form-control"/>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    
    <button type="submit" class="btn btn-primary">Connexion</button>
    <p class="mt-3">Pas encore de compte ? <a href="{{ path('register') }}">Inscrivez-vous</a></p>

</form>
{% endblock %}
